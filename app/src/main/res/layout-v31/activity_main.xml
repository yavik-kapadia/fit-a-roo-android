<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/system_accent3_200"
        android:backgroundTintMode="src_over">
    <Button
            android:text="Begin your Fitness Journey"
            android:layout_width="376dp"
            android:layout_height="67dp" android:id="@+id/startWorkOutBtn"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtHeader"
            tools:layout_editor_absoluteY="135dp"
            tools:layout_editor_absoluteX="112dp" android:textSize="60sp"
            android:fontFamily="@font/lato"/>

</androidx.constraintlayout.widget.ConstraintLayout>