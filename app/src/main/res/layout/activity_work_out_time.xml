<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkOutTimeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="391dp"
        android:layout_height="720dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="148dp"
            android:layout_height="37dp"
            android:layout_marginTop="36dp"
            android:paddingTop="5sp"
            android:text="@string/select_exercise"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/spinner1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="37dp"
            tools:layout_conversion_absoluteWidth="212dp" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="243dp"
            android:layout_height="37dp"
            android:layout_marginTop="36dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="391dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="39dp"
            android:layout_height="27dp"
            android:layout_marginStart="72dp"
            android:text="0"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txtCurrentSet"
            tools:layout_editor_absoluteY="101dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="42dp"
            android:layout_height="27dp"
            android:layout_marginStart="72dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="534dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/currentRep"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txtCurrentSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="28dp"
            android:text="Current Set:"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/currentRep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="534dp"
            android:text="Curent Rep:"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCurrentSet"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/minusCurrentRepBtn"
            android:layout_width="53dp"
            android:layout_height="27dp"
            android:background="@android:color/transparent"
            android:text="Button"
            android:textAlignment="textStart"
            app:icon="@drawable/ic_minus_circle"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.396"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="159dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>